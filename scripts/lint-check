#!/bin/sh

# script/lint-check: Check linting without making changes.

set -e

cd "$(dirname "$0")/.."

echo "==> Checking linting..."

echo "==> Checking isort..."
uv run --dev isort aiogithubapi tests --check-only

echo "==> Checking black..."
uv run --dev black --check --fast aiogithubapi tests

echo "==> Checking mypy..."
uv run --dev mypy aiogithubapi

echo "==> Linting check completed!"
